<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- ==================== -->
	<!-- PRODUCT STYLE -->
	<!-- Added by mike.zhang -->
	<!-- ==================== -->
	<record id="sh_product_style_tree_view" model="ir.ui.view">
		<field name="name">sh.product.style.tree.view</field>
		<field name="model">sh.product.style</field>
		<field name="arch" type="xml">
			<tree string="Styles" editable="top">
				<field name="name"/>
				<field name="categ_id"/>
			</tree>
		</field>
	</record>

	<record id="sh_product_style_form_view" model="ir.ui.view">
		<field name="name">sh.product.style.form.view</field>
		<field name="model">sh.product.style</field>
		<field name="arch" type="xml">
			<form string="Product Style">
				<group>
					<group>
						<field name="name"/>
						<field name="categ_id"/>
					</group>
				</group>
			</form>
		</field>
	</record>

	<record id="sh_product_style_action" model="ir.actions.act_window">
		<field name="name">Styles</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">sh.product.style</field>
		<field name="view_mode">tree</field>
		<field name="view_type">form</field>
	</record>

	<menuitem id="sh_product_style_menu" action="sh_product_style_action" name="Garment Styles" parent="sale.prod_config_main" groups="sales_team.group_sale_manager" />

