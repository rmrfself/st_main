	<!-- ================= -->
	<!-- PRODUCT.TEMPLATE FORM VIEW -->
	<!-- =================  -->
	<record id="emb_product_tmpl_form_view" model="ir.ui.view">
		<field name="name">emb.product.tmpl.form.view</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_form_view"/>
		<field name="arch" type="xml">
			<xpath expr="//page[@name='general_information']" position="after">
				<field name="resource_type" invisible='1'/>
				<page name="garment_info" string="Garment Detail" attrs="{'invisible': [('resource_type', '!=', 'garment')]}">
					<group name="Information">
						<group string="Basic Information">
							<field name="name" />
							<field name="resource_type" />
							<field name="emb_categ_id" />
						</group>
						<group string="Garment Style" name="styles">
							<field name="sh_style_id" />
							<field name="sh_brand_id" />
							<field name="sh_color_ids" widget="many2many_tags"/>
							<field name="sh_size_ids" widget="many2many_tags"/>
						</group>
					</group>
					<group name="Description">
						<field name="description" />
					</group>
					<group name='Images'>
						<field name="image_ids" mode="kanban" context="{'default_name': name, 'default_product_tmpl_id': active_id}">
                        <kanban string="Product Images">
                            <field name="name"/>
                            <field name="image" />
                            <templates>
                                <t t-name="kanban-box">
                                    <div class="oe_kanban_global_click">
                                        <a t-if="!read_only_mode" type="delete" class="fa fa-times pull-right"/>
                                        <div class="o_kanban_image">
                                            <img t-if="record.image.raw_value" t-att-src="'data:image/png;base64,'+record.image.raw_value"/>
                                        </div>
                                        <div class="oe_kanban_details">
                                            <field name="name"/>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                    </field>
					</group>
				</page>
			</xpath>
		</field>
	</record>

	<!-- ================= -->
	<!-- PRODUCT.TEMPLATE SEARCH VIEW -->
	<!-- =================  -->
	<record id="sh_psscb_product_tmpl_search_view" model="ir.ui.view">
		<field name="name">sh.psscb.product.tmpl.search.view</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_search_view"/>
		<field name="arch" type="xml">
			<xpath expr="//filter" position="after">
				<group expand="1" string="Group By">
					<filter string="Color" name="sh_color_filter" context="{'group_by':'sh_color_id'}"/>
					<filter string="Size" name="sh_size_filter" context="{'group_by':'sh_size_id'}"/>
					<filter string="Brand" name="sh_brand_filter" context="{'group_by':'sh_brand_id'}"/>
					<filter string="Style" name="sh_style_filter" context="{'group_by':'sh_style_id'}"/>
				</group>
			</xpath>
		</field>
	</record>


