	<!-- ================= -->
	<!-- PRODUCT.TEMPLATE FORM VIEW -->
	<!-- =================  -->
	<record id="sh_psscb_product_tmpl_form_view" model="ir.ui.view">
		<field name="name">sh.psscb.product.tmpl.form.view</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_form_view"/>
		<field name="arch" type="xml">
			<field name='product_variant_id' position="after">
				<field name="sh_brand_id"/>
				<field name="sh_size_id"/>
			</field>
			<field name="categ_id" position="after">
				<field name="sh_color_id"/>
				<field name="sh_style_id"/>
			</field>
		</field>
	</record>

	<!-- ================= -->
	<!-- PRODUCT.TEMPLATE SEARCH VIEW -->
	<!-- =================  -->
	<record id="sh_psscb_product_tmpl_search_view" model="ir.ui.view">
		<field name="name">sh.psscb.product.tmpl.search.view</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_search_view"/>
		<field name="arch" type="xml">
			<xpath expr="//filter" position="after">
				<group expand="1" string="Group By">
					<filter string="Color" name="sh_color_filter" context="{'group_by':'sh_color_id'}"/>
					<filter string="Size" name="sh_size_filter" context="{'group_by':'sh_size_id'}"/>
					<filter string="Brand" name="sh_brand_filter" context="{'group_by':'sh_brand_id'}"/>
					<filter string="Style" name="sh_style_filter" context="{'group_by':'sh_style_id'}"/>
				</group>
			</xpath>
		</field>
	</record>


</odoo>     

