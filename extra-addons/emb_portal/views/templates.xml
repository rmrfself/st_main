<odoo>
	<data>
		<template id="footer_copyright_emb" inherit_id="website.layout" name="Emb Footer Copyright">
			<xpath expr="//footer" position="replace">
				<div class="container mt16 mb8">
				</div>
			</xpath>
		</template>
		<template id="emb_assets_backend" name="emb portal assets" inherit_id="web.assets_backend">
			<xpath expr="." position="inside">
				<link rel="stylesheet" href="/emb_portal/static/src/css/web.backend.css"/>
			</xpath>
    	</template>
		<template id="assets_frontend_emb_portal" inherit_id="web.assets_frontend" name="Emb Portal Frontend Assets">
			<xpath expr="//link[last()]" position="after">
				<link rel="stylesheet" type="text/css" href="/emb_portal/static/src/css/bootstrap-datepicker.min.css" />
				<link rel="stylesheet" type="text/css" href="/emb_portal/static/src/css/qtip.min.css" />
				<link rel="stylesheet" type="text/less" href="/web/static/lib/bootstrap/less/mixins/grid.less" />
				<link rel="stylesheet" type="text/less" href="/emb_portal/static/src/css/spectrum.css" />
				<link rel="stylesheet" type="text/less" href="/emb_portal/static/src/css/main.less" />
			</xpath>
			<xpath expr="//script[last()]" position="after">
				<script type="text/javascript" src="/emb_portal/static/src/js/typeahead.min.js"></script>
				<script type="text/javascript" src="/emb_portal/static/src/js/bootstrap-notify.min.js"></script>
				<script type="text/javascript" src="/emb_portal/static/src/js/qtip.min.js"></script>
				<script type="text/javascript" src="/emb_portal/static/src/js/spectrum.js"></script>
				<script type="text/javascript" src="/emb_portal/static/src/js/html2canvas.min.js"></script>
				<script type="text/javascript" src="/emb_portal/static/src/js/fabric.min.js"></script>
				<script type="text/javascript" src="/emb_portal/static/src/js/bootstrap-confirmation.min.js"></script>
				<script type="text/javascript" src="/emb_portal/static/src/js/bootstrap-datepicker.min.js"></script>
				<script type="text/javascript" src="/emb_portal/static/src/js/md5.js"></script>
			</xpath>
		</template>
		<template id="portal_header" inherit_id="website.layout" name="Header Shop My Cart Link">
			<xpath expr="//header//li[@id='my_cart']" position="replace">
				<t t-set="website_sale_order" t-value="website.sale_get_order()" />
				<li id="my_cart" t-att-class="'' if website_sale_order and website_sale_order.cart_quantity else 'hidden'">
					<a href="/portal/cart">
						<i class="fa fa-shopping-cart">
						</i>
						My Cart
						<sup t-attf-class="my_cart_quantity label label-primary" t-esc="website_sale_order and website_sale_order.cart_quantity or ''" />
					</a>
				</li>
			</xpath>
		</template>
		<template id="portal_cart_list" name="Emb Portal Cart List">
			<t t-call="website.layout">
				<t t-set="head">
					<script type="text/javascript" src="/emb_portal/static/src/js/cart_list.js?debug=assets">
					</script>
				</t>
				<div id="app_container">
					<div class="container emb-cart-list">
						<div class="col-md-12">
							<h4 class="title">
								Customer Info
							</h4>
							<table class="table buyerinfo table-borderless">
								<tr>
									<td>
										Buyer
									</td>
									<td>
										<input id='order_buyer' class="form-control" type="text" name="order-buyer" />
									</td>
									<td>
										P.O.#
									</td>
									<td>
										<input id='order_po' class="form-control" type="text" name="order-po" />
									</td>
									<td>
										Job Title
									</td>
									<td>
										<input id='order_jt' class="form-control" type="text" name="order-jt" />
									</td>
								</tr>
								<tr>
									<td>
										Shipper
									</td>
									<td>
										<input id='order_shipper' class="form-control" type="text" name="order-shipper" />
									</td>
									<td>
										Shipping Date
									</td>
									<td>
										<input id='order_ship_date' class="form-control shipping-date" type="text" name="order-sd" />
									</td>
									<td>
										Repare At
									</td>
									<td>
										<input id='order_require_at' class="form-control shipping-date" type="text" name="order-ra" />
									</td>
								</tr>
							</table>
						</div>
						<div class="col-md-12">
							<h4 class="title">
								Items List
							</h4>
							<div id="cart-list">
								<div class="cart-table">
									<table class="table table-stripped" id="cl">
									</table>
									<div id="emptymsg" class="emptymsg">
									</div>
									<div id="cations">
									</div>
								</div>
							</div>
							<h4 class="title">
								Digital Order List
							</h4>
							<div id="do-cart-list">
								<div class="cart-table">
									<table class="table table-stripped" id="dl">
										<tr>
											<th>Image</th>
											<th>Customer</th>
											<th>Name</th>
											<th>Image Type</th>
											<th>Width</th>
											<th>Height</th>
											<th>Unit</th>
											<th>Price</th>
											<th>Surcharge</th>
											<th>Action</th>
										</tr>
									</table>
									<div id="do_emptymsg" class="emptymsg">Empty</div>
									<div id="dations"></div>
								</div>
							</div>
						</div>
						<div class="col-md-12">
							<div class="form-group green-border-focus">
								<h4 class="title">
									Message
								</h4>
								<textarea id='instr' class="form-control" rows="8"></textarea>
							</div>
							<h4 class="title">
								Order Total
							</h4>
							<table class="table table-stripped">
								<tr>
									<td>
										SubTotal
									</td>
									<td>
										<span id="f-subtotal">
										</span>
									</td>
								</tr>
								<tr>
									<td>
										Total
									</td>
									<td>
										<span id="f-total">
											0.0
										</span>
									</td>
								</tr>
							</table>
							<div class="btns">
								<button id="btn-quot" type="button" class="btn btn-default">
									Ask For Quotation
								</button>
								<button id="btn-order" type="button" class="btn btn-default">
									Continue Ordering
								</button>
							</div>
						</div>
					</div>
				</div>
			</t>
		</template>
		<template id="portal_layout" name="Emb Portal Layout">
			<t t-call="website.layout">
				<t t-set="head">
					<script type="text/javascript" src="/emb_portal/static/src/js/garment_upload.js">
					</script>
				</t>
				<div id="app_container">
					<div class="container emb_portal">
						<div class="row">
							<div id="assets_manager" class="col-md-6">
								<div class="assets_box">
									<div class="actions">
										<button type="button" class="btn btn-primary" data-target="#gmt-upload-modal" data-toggle="modal" aria-pressed="false" autocomplete="off">
											<span class="glyphicon glyphicon-open" aria-hidden="true">
											</span>
											Upload Garment
										</button>
										<button type="button" class="btn btn-primary" data-target="#logo-upload-modal" data-toggle="modal" aria-pressed="false" autocomplete="off">
											<span class="glyphicon glyphicon-open" aria-hidden="true">
											</span>
											Upload Logo
										</button>
									</div>
									<ul id="assets_nav" class="nav nav-tabs">
										<li role="presentation" class="active">
											<a href="#garment-box" aria-controls="garment-box" role="tab" data-toggle="tab">
												Garments
											</a>
										</li>
										<li role="presentation">
											<a href="#logo-box" aria-controls="logo-box" role="tab" data-toggle="tab">
												Logos
											</a>
										</li>
									</ul>
									<div class="tab-content">
										<div role="tabpanel" class="tab-pane active" id="garment-box">
											<div class="content" id="garment-list">
											</div>
											<div class="bottom-actions">
											</div>
										</div>
										<div role="tabpanel" class="tab-pane" id="logo-box">
											<div class="content">
												<div class="form-group row" id='logo-customer-search'>
													<label class="col-sm-2">
														Customer
													</label>
													<div class="col-sm-3">
														<input type="text" class="form-control protip" id="search-customer" placeholder="Select customer" data-pt-title="Input customer name!" />
													</div>
													<label class="col-sm-1">
														Logo
													</label>
													<div class="col-sm-3">
														<input type="text" class="form-control protip" id="search-logo-name" data-pt-title="Input logo name!" />
													</div>
													<button type="button" id="btn-search-c" class="btn btn-primary" data-toggle="modal" aria-pressed="false" autocomplete="off">
														Search
													</button>
												</div>
												<div class="logo-assets clearfix" id='lc'></div>
											</div>
											<div class="bottom-actions">
												
											</div>
										</div>
									</div>
								</div>
								<div class="detail-box">
									<h5>
										Garment Name:
										<span id="gmt-info-name">
											-
										</span>
									</h5>
									<div id="gmt-info-desc">
										<ul>
										</ul>
									</div>
									<div class="row">
										<div id="gmt-info-size-type" class="col-md-5">
											Garment Type:
											<span>
												-
											</span>
										</div>
										<div id="gmt-info-supply" class="col-md-7">
											Supply:
											<select id="gmt-info-supply-select">
												<option value="Customer Supplied">
													Customer Supplied
												</option>
												<option value="Stocked Goods">
													Stocked Goods
												</option>
												<option value="Custom Make">
													Custom Make
												</option>
											</select>
										</div>
									</div>
									<h5>
										Garment Color
									</h5>
									<div id="gmt-info-colors">
										-
									</div>
									<span class="hint">
										* Click these color blocks to change the background color.
									</span>
									<h5>
										Quantity
									</h5>
									<div id="gmt-info-quantity">
										-
									</div>
									<span class="hint">
										* Above fields are all required before adding to cart.
									</span>
								</div>
							</div>
							<div class="col-md-6">
								<div id="compose-box" class="gray_border">
									<canvas id="make-canvas" width="100%" height="100%">
									</canvas>
									<div id="tools-box">
										<div id="tools-info">
										</div>
										<div id="tools-actions">
											<button id="btn-zoom-in" type="button" class="btn green" aria-pressed="false" autocomplete="off">
												<span class="glyphicon glyphicon-zoom-in" aria-hidden="true">
												</span>
												zoom in
											</button>
											<button id="btn-zoom-out" type="button" class="btn green" aria-pressed="false" autocomplete="off">
												<span class="glyphicon glyphicon-zoom-out" aria-hidden="true">
												</span>
												zoom out
											</button>
											<button id="btn-clear-all" type="button" data-toggle="confirmation" class="btn green" aria-pressed="false" autocomplete="off">
												<span class="glyphicon glyphicon-refresh" aria-hidden="true">
												</span>
												clear all
											</button>
										</div>
										<a href="#" class="closex">
											x
										</a>
									</div>
								</div>
								<div id="compose-detail-box">
									<div class="hint">
										* Please drag the logo file into above box, then you can edit it.
									</div>
									<div class="hint">
										* Remove the logo by double-clicking it.
									</div>
									<div id="logo-info">
									</div>
									<div id="logo-lines-container">
										<h5>
											Line Colors
										</h5>
										<div class="hint">
											* Before input these colors, please select your resource first.
										</div>
										<div class="hint">
											* Design down button is enabled after all below fields are filled out.
										</div>
										<div id="line-container">
										</div>
									</div>
									<div id="ddbox">
									</div>
									<div class="submit-area">
										<button type="button" id="submit-edit-ok" class="btn btn-primary" aria-pressed="false" autocomplete="off">
											<span class="glyphicon glyphicon-edit" aria-hidden="true">
											</span>
											Design Down
										</button>
										<button type="button" id="submit-edit-finish" disabled="true" class="btn btn-success" aria-pressed="false" autocomplete="off">
											<span class="glyphicon glyphicon-shopping-cart" aria-hidden="true">
											</span>
											Add Cart
										</button>
									</div>
								</div>
							</div>
						</div>
					</div>
					<!-- Modal -->
					<!-- Modal window for garment upload begin -->
					<div class="modal fade" id="gmt-upload-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
						<div class="modal-dialog" role="document">
							<div class="modal-content">
								<div class="modal-header">
									<button type="button" class="close" data-dismiss="modal" aria-label="Close">
										<span aria-hidden="true">
											x
										</span>
									</button>
									<h4 class="modal-title" id="myModalLabel">
										Garment Template Setting
									</h4>
								</div>
								<div class="modal-body" id="gmt-upload">
									<div class="content">
										<div class="row">
											<form class="form-horizontal">
												<div class="col-md-6">
													<div class="form-group row">
														<label class="col-sm-3" for="exampleInputName2">
															Category
														</label>
														<div class="col-sm-9">
															<input id="gmt-id" name="gmt-id" type="hidden" />
															<select id="gmt-category" class="form-control form-control-lg">
															</select>
														</div>
													</div>
													<div class="form-group row">
														<label class="col-sm-3" for="gmt-style">
															Style
														</label>
														<div class="col-sm-9">
															<input type="text" class="form-control protip" id="gmt-style" placeholder="input a style here" data-pt-title="Input your garment style!" />
														</div>
													</div>
													<div class="form-group row">
														<label class="col-sm-3" for="gmt-brand">
															Brand
														</label>
														<div class="col-sm-9">
															<input type="text" class="form-control protip typeahead" id="gmt-brand" placeholder="set a brand here" data-pt-title="Input your garment brand!" />
															<div class="colorhint">
																New value can be input here.
															</div>
														</div>
													</div>
													<div class="form-group row">
														<label class="col-sm-3" for="gmt-name">
															Name
														</label>
														<div class="col-sm-9">
															<input type="text" class="form-control protip" id="gmt-name" placeholder="set a name here" data-pt-title="Input your garment name!" />
														</div>
													</div>
													<div class="form-group row color-edit">
														<a href="#" id="gmt-color-picker" class="glyphicon glyphicon-plus">
															<span>
																add
															</span>
														</a>
														<label class="col-sm-3" for="gmt-brand">
															Color
														</label>
														<div class="col-sm-12 color-blocks" id="gmt-colors">
														</div>
													</div>
													<div class="colorhint">
														<p>
															Remove color by clicking color block.
														</p>
														<p>
															At least choose one as default color.
														</p>
													</div>
													<div class="form-group row">
														<label class="col-sm-5" for="exampleInputName2">
															Size Template
														</label>
														<div class="col-sm-7">
															<select id="gmt-size-tpl" class="form-control form-control-lg">
															</select>
														</div>
														<div class="col-sm-12 size-list" id="size-attrs">
														</div>
													</div>
												</div>
												<div class="col-md-6">
													<div class="form-group row gmt-image-upload">
														<label class="col-sm-5" for="gmt-brand">
															Preview Images
														</label>
														<div class="col-sm-12 image-blocks">
															<table class="table table-bordered m0">
																<tr>
																	<td>
																		<input type="file" id="gmt-img-top" style="display: none" />
																		<a href="#" id="gmt-link-top" data-tag="top" class="glyphicon glyphicon-open upload-link">
																		</a>
																		<span>
																			top
																			<a href="#" id="gmt-r-top" class="glyphicon glyphicon-trash rbtn">
																			</a>
																		</span>
																	</td>
																	<td>
																		<input type="file" id="gmt-img-left" style="display: none" />
																		<a href="#" id="gmt-link-left" data-tag="left" class="glyphicon glyphicon-open upload-link">
																		</a>
																		<span>
																			left
																			<a href="#" id="gmt-r-left" class="glyphicon glyphicon-trash rbtn">
																			</a>
																		</span>
																	</td>
																	<td>
																		<input type="file" id="gmt-img-front" style="display: none" />
																		<a href="#" id="gmt-link-front" data-tag="front" class="glyphicon glyphicon-open upload-link">
																		</a>
																		<span>
																			front
																			<a href="#" id="gmt-r-front" class="glyphicon glyphicon-trash rbtn">
																			</a>
																		</span>
																	</td>
																</tr>
																<tr>
																	<td>
																		<input type="file" id="gmt-img-bottom" style="display: none" />
																		<a href="#" id="gmt-link-bottom" data-tag="bottom" class="glyphicon glyphicon-open upload-link">
																		</a>
																		<span>
																			bottom
																			<a href="#" id="gmt-r-bottom" class="glyphicon glyphicon-trash rbtn">
																			</a>
																		</span>
																	</td>
																	<td>
																		<input type="file" id="gmt-img-right" style="display: none" />
																		<a href="#" id="gmt-link-right" data-tag="right" class="glyphicon glyphicon-open upload-link">
																		</a>
																		<span>
																			right
																			<a href="#" id="gmt-r-right" class="glyphicon glyphicon-trash rbtn">
																			</a>
																		</span>
																	</td>
																	<td>
																		<input type="file" id="gmt-img-back" style="display: none" />
																		<a href="#" id="gmt-link-back" data-tag="back" class="glyphicon glyphicon-open upload-link">
																		</a>
																		<span>
																			back
																			<a href="#" id="gmt-r-back" class="glyphicon glyphicon-trash rbtn">
																			</a>
																		</span>
																	</td>
																</tr>
															</table>
															<div class="colorhint m0">
																Remove image by double clicking.
															</div>
														</div>
													</div>
													<div class="form-group row">
														<label class="col-sm-3" for="gmt-brand">
															Description
														</label>
														<div class="col-sm-12">
															<textarea id="gmt-desc" class="form-control" rows="7" placeholder="Input more information here.">
															</textarea>
														</div>
													</div>
													<div class="form-group row submits">
														<div class="col-md-12 text-center">
															<button type="button" id="gmt-cancel-btn" class="btn btn-primary">
																Cancel
															</button>
															<button type="button" id="gmt-submit-btn" class="btn btn-success">
																Save
															</button>
														</div>
													</div>
													<div id="gmt-upload-msg" class="form-group row validation">
														<div id="gmt-upload-loader">
															<img src="/emb_portal/static/src/images/grid.svg" height="30" width="30" />
															Upload your garment, please wait a moment ..
														</div>
													</div>
												</div>
											</form>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
					<!-- Modal window for garment upload end -->
					<!-- Modal window for logos upload begin -->
					<div class="modal fade" id="logo-upload-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
						<div class="modal-dialog" role="document">
							<div class="modal-content">
								<div class="modal-header">
									<button type="button" class="close" data-dismiss="modal" aria-label="Close">
										<span aria-hidden="true">
											x
										</span>
									</button>
									<h4 class="modal-title" id="myModalLabel">
										Logo Upload
									</h4>
								</div>
								<div class="modal-body" id="logo-upload">
									<div class="content">
										<div class="row">
											<form class="form-horizontal">
												<div class="col-md-7">
													<div class="form-group logo_order">
														<div class="col-sm-5">
															<label class="radio-inline">
																<input name="order-type" value="c" type="radio" checked="checked" />
																Common Order
															</label>
														</div>
														<div class="col-sm-7">
															<label class="radio-inline">
																<input name="order-type" value="d" type="radio" />
																Digizing Order
															</label>
														</div>
													</div>
													<div class="form-group row" id='logo-customer-a'>
														<label class="col-sm-3" for="exampleInputName2">
